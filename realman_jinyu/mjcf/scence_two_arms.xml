<mujoco model="aloha_scene">
    <compiler angle="radian" />
    <include file="realman_65_two_arms_gripper.xml"/>
    <asset>
        <texture name="table" type="2d" file="desktop.png"/>
        <material name="table_mat" texture="table" rgba="0.4 0.3 0.2 1"/>
    </asset>

    <worldbody>
        <!-- <light name="light" pos="0 1 1.5" dir="0 0 -1" directional="true"/> -->
        <light name="light"
         pos="0 0 0.8"
         dir="0 -1 -1"
         directional="true"
         diffuse="0.8 0.8 0.8"
         ambient="0.2 0.2 0.2" />
 
        <!--    body@pos="0 0 0"
        把 table 刚体的坐标系原点放在世界坐标 (0,0,0)。
        inertial@pos="0 0 0"
        指定质心相对于 body 坐标系的偏移 → 0，即质心就在 body 原点。
        geom@pos="0 0 -0.02"
        把几何盒子向下偏移 2 cm（相对于 body 坐标系），于是桌面顶面正好落在 world z=0。-->
        <body name="table" pos="0 0 0">   <!-- 高度 0，可改 0.7 等 -->
            <inertial pos="0 0 0" mass="1000" diaginertia="1 1 1"/>
            <geom type="box" size="0.8 0.6 0.02" material="table_mat" pos="0 0 -0.02" condim="3" friction="1 0.005 0.0001" solimp="0.98 0.98 0.001" solref="0.002 2000"  margin="0" />
        </body>
        <body name="package" pos="0 0 0">
            <joint name="package_joint" type="free"/>
            <geom type="box" size="0.03 0.015 0.025"  pos="0 0 0.03" condim="3" friction="0.7"  solref="0.01 1" rgba="0.875 0.274 0.751 1" /> 
            <geom type="box" size="0.005 0.005 0.015"  pos="-0.015 0 0.07" condim="3" friction="0.7"  solref="0.01 1" rgba="0.875 0.274 0.751 1" /> 
            <geom type="box" size="0.005 0.005 0.015"   pos="0.015 0 0.07"  condim="3" friction="0.7"  solref="0.01 1" rgba="0.875 0.274 0.751 1" /> 
            <geom type="box" size="0.018 0.005 0.005"  pos="0 0 0.085" condim="3" friction="0.7"  solref="0.01 1" rgba="0.875 0.274 0.751 1" /> 
        </body>
        <!-- <body name="arm_base" pos="-0.7 0 0">
          
            <include file="realman_65_wrist_cam.xml"/>
        </body> -->
        <!-- <site name="top_site" pos="0 -0.35 1.02524" quat="0.976332 0.216277 0 0"/>
        <site name="button_site" pos="0 -0.35 0.0316055" quat="0.672659 0.739953 0 0"/> -->
        <camera name="top_cam"
        pos="0 -0.6 1.2"
        quat="0.976332 0.216277 0 0"
        fovy="58"/>   <!-- 如果 compiler 是 degree 单位 -->

        <camera name="button_cam"
        pos="0 -0.6 0.0316055"
        quat="0.672659 0.739953 0 0"
        fovy="58"/>

    </worldbody>

    <!-- <sensor>
        <camera name="topcam"    site="top_site"    resolution="640 480" fovy="58"/>
        <camera name="buttoncam" site="button_site" resolution="640 480" fovy="58"/>
    </sensor> -->

</mujoco>