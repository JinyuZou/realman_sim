<mujoco model="aloha_scene">
    <compiler angle="radian" />
    <include file="realman_65_two_arms_gripper.xml"/>
    <asset>
        <texture name="table" type="2d" file="desk2.png"/>
        <material name="table_mat" texture="table" rgba="0.4 0.3 0.2 1"/>
    </asset>
    <option timestep="0.002"/>
    <worldbody>
        <!-- <light name="light" pos="0 1 1.5" dir="0 0 -1" directional="true"/> -->
        <light name="light"
         pos="0 0 0.8"
         dir="0 -1 -1"
         directional="true"
         diffuse="0.8 0.8 0.8"
         ambient="0.2 0.2 0.2" />
 
        

        <body name="table" pos="0 0 0">
        <!-- 这行 inertial 对静态刚体没用，可删 -->
        <!-- <inertial pos="0 0 0" mass="1000" diaginertia="1 1 1"/> -->

        <!-- 仅可视 -->
        <geom name="table_visual" type="box"
                size="0.8 0.6 0.02" pos="0 0 -0.02"
                rgba="0.25 0.0 0.25 1"
                group="2" contype="0" material="table_mat" conaffinity="0"/>

        <!-- 真正参与碰撞的桌面 -->
        <geom name="table_top" type="box"
                size="0.8 0.6 0.02" pos="0 0 -0.02"
                condim="3" contype="1" conaffinity="1" material="table_mat" 
                friction="1.2 0.01 0.001"
                solref="0.002 1"          
                solimp="0.9 0.95 0.001"    
                margin="0.003"/>          
        </body>

     
        <camera name="top_cam"
        pos="0 -0.5 1"
        quat="0.976332 0.216277 0 0"
        fovy="58"/>   <!-- 如果 compiler 是 degree 单位 -->

        <camera name="button_cam"
        pos="0 -0.5 0.0316055"
        quat="0.672659 0.739953 0 0"
        fovy="58"/>

    </worldbody>

   

</mujoco>